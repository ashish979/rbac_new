<header class="main-header">
  <nav class="navbar navbar-static-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <a href="/" class="navbar-brand">Tinglado</a>
      </div>
      <% if user_signed_in? %>
        <ul class="nav navbar-nav">
          <li><%= link_to 'Users', users_path %></li>
        </ul>
      <% end %>

      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <% if user_signed_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.full_name %> <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li>
                  <%= link_to 'Profile', edit_user_registration_path, :class => 'btn btn-default btn-flat' %>
                </li>
                <li>
                  <%= link_to 'Log out', destroy_user_session_path, method: :delete, :class => 'btn btn-default btn-flat' %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to 'Login', new_user_session_path %></li>
          <% end %>
        </ul>
      </div>

    </div>
  </nav>
</header>