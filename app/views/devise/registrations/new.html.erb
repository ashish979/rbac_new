<div class="login-box login-div">
  <div class="box box-solid box-default text-center center-block">
    <div class="box-header with-border">
      <h3 class="box-title">Register</h3>
    </div><!-- /.box-header -->
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
      <div class="box-body">
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :full_name, class: 'col-sm-4 control-label' %>
          <div class="col-sm-7">
            <%= f.text_field :full_name, autofocus: true, class: 'form-control', placeholder: 'William' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :email, class: 'col-sm-4 control-label' %>
          <div class="col-sm-7">
            <%= f.email_field :email, class: 'form-control', placeholder: 'you@example.com' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password, class: 'col-sm-4 control-label' %>
          <div class="col-sm-7">
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password'  %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, 'Confirm Password', class: 'col-sm-4 control-label' %>
          <div class="col-sm-7">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Password'  %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit 'Sign up', class: 'btn btn-sm btn-success btn-x1' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
