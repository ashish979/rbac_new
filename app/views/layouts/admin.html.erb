<!DOCTYPE html>
<html>
<head>
  <title>Admin</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body class="sidebar-mini sidebar-mini-expand-feature skin-blue fixed">
<div class="wrapper">
  <header class="main-header">
    <a href="/" class="logo">Home</a>
    <nav class="navbar navbar-static-top"><%= render partial: 'shared/top_nav' %></nav>
  </header>
  <div class="main-sidebar">
    <div class="sidebar">
      <ul class="sidebar-menu">
        <li class="header">Admin Menu</li>
        <li><%= link_to 'Users', users_path if can? :read, User %></li>
        <li><%= link_to 'Roles', roles_path if can? :read, Role %></li>
      </ul><!-- /.sidebar-menu -->
    </div><!-- /.sidebar -->
  </div><!-- /.main-sidebar -->

  <div class="content-wrapper">
    <section class="content">
      <%= render partial: 'shared/flash' %>
      <div>
        <%= yield %>
      </div>
    </section>
  </div>
  <%= render partial: 'shared/app_footer' %>
</div>
</body>
</html>
